<IfModule mod_fcgid.c>
  AddHandler    fcgid-script .fcgi
  IPCConnectTimeout 20
  #MaxRequestLen 2MB
  MaxRequestLen 2000000
</IfModule>

<% if %w{ redhat centos scientific fedora }.include?(node['platform']) -%>
