<IfModule mod_fcgid.c>
  AddHandler    fcgid-script .fcgi
  IPCConnectTimeout <%=node['apache']['fcgi_ipc_connect_timeout']%>
  IPCCommTimeout <%=node['apache']['fcgi_ipc_comm_timeout']%>
  IdleTimeout <%=node['apache']['fcgi_idle_timeout']%>
  BusyTimeout <%=node['apache']['fcgi_busy_timeout']%>
  #MaxRequestLen 2MB
  MaxRequestLen <%=node['apache']['max_request_len']%>
</IfModule>

<% if %w{ redhat centos scientific fedora }.include?(node['platform']) -%>
# Sane place to put sockets and shared memory file
SocketPath run/mod_fcgid
SharememPath run/mod_fcgid/fcgid_shm
<% end -%>
